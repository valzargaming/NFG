{
  "name": "note-form-generator",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "lint": "eslint \"**/*.js\"",
    "cs-fixer": "prettier --write \"**/*.{js,html,json,css,md}\" && node -e \"require('child_process').spawnSync('eslint',['--fix','**/*.js'],{stdio:'inherit',shell:true})\"",
    "cs-fixer:prettier": "prettier --write \"**/*.{js,html,json,css,md}\"",
    "cs-fixer:eslint": "node -e \"require('child_process').spawnSync('eslint',['--fix','**/*.js'],{stdio:'inherit',shell:true})\"",
    "build": "esbuild src/index.js --bundle --format=esm --outfile=dist/index.esm.js && esbuild src/index.js --bundle --format=cjs --outfile=dist/index.cjs.js",
    "build:browser": "esbuild src/index.js --bundle --format=iife --global-name=NFG --outfile=dist/form-generator.js --minify",
    "build:html": "node scripts/generate-html.js",
    "build:all": "npm run build && npm run build:browser && npm run build:html",
    "prepare": "npm run build"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist/",
    "src/form-generator.html"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "testTimeout": 10000,
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "esbuild": "^0.18.0",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^29.6.0",
    "jsdom": "^22.1.0",
    "prettier": "^2.8.8"
  }
}
